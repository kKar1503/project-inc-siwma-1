{
  "name": "project-inc-siwma",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean-i": "pnpm install --frozen-lockfile",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "git-clean": "git clean -d -x -e node_modules -e packages -f",
    "git-reset": "git reset --hard HEAD",
    "prepare": "run-script-os",
    "prepare:macos": "husky install && chmod ug+x .husky/*",
    "prepare:default": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "next": "13.0.0",
    "prettier": "latest",
    "run-script-os": "^1.1.6",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.12.2",
  "lint-staged": {
    "{apps,packages}/!(eslint-config-custom)/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{apps,packages}/**/*.{scss,css,html,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  }
}
