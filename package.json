{
  "name": "project-inc-siwma",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.12.2",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{apps,packages}/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{apps,packages}/**/*.{scss,css,html,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  }
}
